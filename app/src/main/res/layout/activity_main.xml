<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_pipoca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="278dp"
        android:text="Pipoca" />

    <Button
        android:id="@+id/btn_lasanha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="150dp"
        android:text="Lasanha" />

    <Button
        android:id="@+id/btn_brigadeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="21dp"
        android:text="Brigadeiro" />

    <Button
        android:id="@+id/btn_vegetais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="559dp"
        android:text="Vegetais" />

    <Button
        android:id="@+id/btn_arroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="560dp"
        android:text="Arroz" />

    <Button
        android:id="@+id/btn_carne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="26dp"
        android:text="Carne" />

    <!--    TODO: input de tempo-->
    <TextView
        android:id="@+id/txtview_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="464dp"
        android:text="Tempo"
        android:textAlignment="center"
        android:textSize="34sp" />

    <!-- TODO: texto com valor do slide -->
    <SeekBar
        android:id="@+id/skbar_potencia"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="294dp"
        android:max="100"
        android:progress="1" />

    <TextView
        android:id="@+id/txtview_potencia"
        android:layout_width="220dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="362dp"
        android:text="Potencia: valor do slide"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="561dp"
        android:layout_marginBottom="122dp"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="122dp"
        android:text="Stop/Cancel" />


</RelativeLayout>